# 开发环境配置
QUANT_ENV=development
DEBUG=true

# 数据库配置
DATABASE_URL=postgresql://postgres:password@localhost:5432/quant_framework
DB_ECHO=true

# Redis配置
REDIS_URL=redis://localhost:6379/0

# Celery配置
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# 安全配置
SECRET_KEY=dev-secret-key-change-in-production

# API配置
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# 日志配置
LOG_LEVEL=DEBUG
LOG_FORMAT=text

# 数据源配置
TUSHARE_TOKEN=your_tushare_token_here
WIND_USERNAME=your_wind_username
WIND_PASSWORD=your_wind_password

# 功能开关
FEATURE_ENABLE_DEBUG_TOOLBAR=true
FEATURE_ENABLE_PROFILING=true
FEATURE_ENABLE_RATE_LIMITING=false