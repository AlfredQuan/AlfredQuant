# 环境配置示例文件
# 复制此文件为 .env 并填入实际配置值

# 应用环境
ENVIRONMENT=development
APP_NAME=Quant Framework
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here

# API配置
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# 数据库配置
DATABASE_URL=postgresql://username:password@localhost:5432/quant_framework
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=false

# Redis配置
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# 万得数据配置
WIND_USERNAME=your_wind_username
WIND_PASSWORD=your_wind_password
WIND_SERVER=default
WIND_TIMEOUT=30
WIND_MAX_RETRIES=3
WIND_RATE_LIMIT=100

# 回测配置
DEFAULT_COMMISSION=0.0003
DEFAULT_SLIPPAGE=0.001
MIN_TRADE_AMOUNT=100.0
DEFAULT_FREQUENCY=daily